<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <com.yuyh.library.view.text.EmailAutoCompleteTextView
        android:textSize="16sp"
        android:id="@+id/username"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_gravity="center"
        android:background="@drawable/edit_bg"
        android:hint="用户名(只能是邮箱)"
        android:padding="@dimen/margin_10"
        android:textColor="#99a8a6"
        android:textColorHint="#AAAAAA"/>

    <EditText
        android:textSize="16sp"
        android:id="@+id/password"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@drawable/edit_bg"
        android:hint="设置密码(数字)"
        android:inputType="numberPassword"
        android:padding="@dimen/margin_10"
        android:textColor="#99a8a6"
        android:textColorHint="#AAAAAA"/>

    <EditText
        android:textSize="16sp"
        android:id="@+id/password1"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@drawable/edit_bg"
        android:hint="重新输入密码"
        android:inputType="numberPassword"
        android:padding="@dimen/margin_10"
        android:textColor="#99a8a6"
        android:textColorHint="#AAAAAA"/>

    <com.github.czy1121.view.RoundButton
        android:id="@+id/ok"
        style="@style/RoundButton"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="确认"
        android:textColor="#AAAAAA"
        android:textSize="18sp"
        app:btnCornerRadius="10dp"
        app:btnPressedRatio="0.8"
        app:btnSolidColor="#d7dddc"/>
</LinearLayout>