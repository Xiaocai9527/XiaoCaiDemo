<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <com.yuyh.library.view.text.EmailAutoCompleteTextView
        android:textSize="16sp"
        android:id="@+id/username"
        android:padding="@dimen/margin_10"
        android:textColorHint="#AAAAAA"
        android:background="@drawable/line_selector"
        android:hint="输入用户名(邮箱)"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:textColor="#99a8a6"/>

    <com.yuyh.library.view.text.PasswordEditText
        android:id="@+id/passEdit"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_20dp"/>

    <com.github.czy1121.view.RoundButton
        android:id="@+id/btn_register"
        style="@style/RoundButton"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="登录"
        android:textColor="#AAAAAA"
        android:textSize="18sp"
        app:btnCornerRadius="10dp"
        app:btnPressedRatio="0.8"
        app:btnSolidColor="#d7dddc"/>

</LinearLayout>